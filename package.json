{
  "name": "skatejs",
  "version": "5.0.0-alpha.0",
  "description": "Skate is a library built on top of the W3C web component specs that enables you to write functional and performant web components with a very small footprint.",
  "license": "MIT",
  "author": "Trey Shugart <treshugart@gmail.com> (http://treshugart.github.io)",
  "repository": {
    "type": "git",
    "url": "https://github.com/skatejs/skatejs"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "src/index.d.ts",
  "keywords": [
    "components",
    "custom",
    "dom",
    "elements",
    "web",
    "components",
    "vdom",
    "virtual"
  ],
  "files": [
    "es",
    "lib",
    "umd"
  ],
  "dependencies": {},
  "devDependencies": {
    "@skatejs/web-components": "^1.0.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.1.1",
    "babel-plugin-modules-map": "^1.0.0",
    "babel-plugin-modules-web-compat": "^1.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "bore": "^1.1.0",
    "commitizen": "^2.8.2",
    "cz-conventional-changelog": "2.0.0",
    "gitbook-cli": "^2.3.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-sauce-launcher": "^1.1.0",
    "nwb": "^0.15.6",
    "preact": "*",
    "semantic-release": "^6.3.2",
    "semistandard": "^9.0.0",
    "typescript": "^2.1.4",
    "typescript-formatter": "^5.0.0"
  },
  "peerDependencies": {
    "preact": "*"
  },
  "scripts": {
    "transpile": "BABEL_ENV=webify babel src --out-dir es-latest",
    "docs:build": "gitbook install && gitbook build",
    "docs:watch": "gitbook install && gitbook serve",
    "prepublish": "nwb build",
    "release": "semantic-release pre && npm publish && semantic-release post",
    "test": "node umd/skatejs.js && semistandard && npm run test:ts && nwb test -- --ci",
    "test:ts": "tsfmt -r && tsc -p ./",
    "test:watch": "nwb test --server"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "semistandard": {
    "parser": "babel-eslint"
  },
  "babel": {
    "env": {
      "webify": {
        "plugins": [
          "transform-class-properties",
          "transform-object-rest-spread",
          [
            "modules-map",
            {
              "preact": "preact/dist/preact.esm"
            }
          ],
          "modules-web-compat"
        ],
        "presets": [
          [
            "env",
            {
              "modules": false,
              "targets": {
                "browsers": [
                  "safari >= 10"
                ]
              }
            }
          ]
        ]
      }
    }
  }
}
